@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Functions";
}

@section PageHead {
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet" />
    <link href="../Content/Styles/SiteExtensions.css" rel="stylesheet" />
    <link href="../Content/Styles/Functions.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.2/ace.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.2/ext-modelist.js" type="text/javascript"></script>
}

<div id="main" class="container">
    <div class="row navbar">
        <form class="navbar-form">
            <div style="float: right">
                <div class="spinner">
                    <i data-bind="visible: creating()" class="fa fa-spinner fa-spin" title="Please wait"></i>
                </div>
                <div class="btn-group">
                    <input class="span2" placeholder="new function name" data-bind="value: newFunctionName" style="height: 34px;" size="16" type="text">
                </div>
                <div class="btn-group">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        <span data-bind="text: selectedTemplate() ? selectedTemplate().name : 'Select Template'"></span>
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                        <li data-bind="foreach: templates"><a href="#" data-bind="click: $parent.selectTemplate, text: name"></a></li>
                    </ul>
                </div>
                <button class="btn btn-default" type="button" data-bind="click: createNewFunction">
                    <span>Create New Function</span>
                </button>
            </div>
        </form>
    </div>

    <div class="row">

        <div class="row" id="hostConfig">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <a href="#" style="color: #31708f; text-decoration: underline" role="button"
                           data-toggle="modal" data-target="#editFunctionModal" data-placement="top"
                           data-bind="click: editHostConfig">
                            Host Config
                        </a>
                    </div>
                    <div class="panel-body">
                        <pre data-bind="text: ko.toJSON(hostConfig, null, 2)"></pre>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="tiles" data-bind="foreach: functions">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <a href="#" style="color: #31708f; text-decoration: underline" role="button"
                           data-toggle="modal" data-target="#editFunctionModal" data-bind="text: name, click: $parent.editFunction"></a>
                    </div>
                    <!--<div class="panel-body">
                        <pre data-bind="text: ko.toJSON($data, null, 2)"></pre>
                    </div>-->
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="editFunctionModal" tabindex="-1" role="dialog" aria-labelledby="editHostConfigModalLabel" aria-hidden="true">
        
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="row navbar">
                    <div class="col-lg-12" id="tabHeadings" data-bind="visible: !(files().length === 1 && files()[0].name === 'host.json')">
                        <ul class="nav nav-tabs" id="navTabs">
                            <li class="active">
                                <a id="edit-files-tab" href="#editfiles" data-toggle="tab">Edit Script</a>
                            </li>
                            <li>
                                <a id="run-function-tab" href="#run" data-toggle="tab">Run Function</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-12" id="tabHeadings" data-bind="visible: files().length === 1 && files()[0].name === 'host.json'">
                        <ul class="nav nav-tabs" id="navTabs">
                            <li class="active">
                                <a>Edit Host</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="tab-content">
                    <div class="tab-pane active" id="editfiles">

                    </div>

                    <div class="tab-pane" id="run">

                    </div>
                    <div>
                        <div class="sidebar" data-bind="visible: editFunctionTab">
                            <div class="save-container">
                                <button class="btn btn-success button-top-left save-button text-center" type="button" data-bind="click: saveFile">Save</button>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading text-center">Files</div>
                                <div class="panel-body">
                                    <div style="padding-bottom: 10px">
                                        <input type="text" placeholder="new file name" style="width: 100%" data-bind="value: newFileName, click: addingNewFile" />
                                    </div>
                                    <div data-bind="foreach: files">
                                        <a href="#" style="display: block" data-bind="text: name, click: $parent.editFile"></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="sidebar" data-bind="visible: !editFunctionTab()">
                            <div class="save-container">
                                <button class="btn btn-danger button-top-left save-button text-center" type="button" data-bind="click: runFunction">Run</button>
                            </div>
                        </div>
                        <div class="content-wrap">
                            <div id="editor" style="height: 100%" data-bind="ace: editText"></div>
                            <div data-bind="visible: !editFunctionTab()">
                                <div class="save-container" style="padding-top: 20px; padding-right: 30px; display: inline-block">
                                    <button class="btn btn-info button-top-left save-button text-center" type="button" data-bind="click: getStatus">Get Status</button>
                                </div>
                                <input type="text" style="width: 50%" data-bind="value: runId" />
                                <pre data-bind="text: ko.toJSON(statusResponse, null, 2)" style="overflow: scroll; word-wrap: normal"></pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="//ajax.aspnetcdn.com/ajax/knockout/knockout-3.0.0.js"></script>
<script type="text/javascript" src="../Content/Scripts/Functions.js"></script>
<script type="text/javascript" src="../Content/Scripts/ace-init.js"></script>